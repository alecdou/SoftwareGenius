<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="softwareGenius.mapper.ErrorQuestionDao">
    <resultMap id="errorQuestions" type="softwareGenius.model.ErrorQuestion">
        <result property="id" column="id"/>
        <result property="category" column="category"/>
        <result property="problem" column="problem"/>
        <result property="choice1" column="choice1"/>
        <result property="choice2" column="choice2"/>
        <result property="choice3" column="choice3"/>
        <result property="choice4" column="choice4"/>
        <result property="answer" column="answer"/>
        <result property="difficultyLevel" column="difficultyLevel"/>
        <result property="wrongAnswer" column="wrongAnswer"/>
    </resultMap>

    <insert id="addNewErrorQuestion" parameterType="map">
        insert into errorQuestion (
            userId,
            questionId,
            wrongAnswer
        )
        VALUES (
           #{userId},
           #{questionId},
           #{wrongAnswer}
        )
    </insert>

    <select id="getErrorQuestionByUserId" parameterType="map" resultMap="errorQuestions">
        select id, category, problem, choice1, choice2, choice3, choice4, answer, difficultyLevel, wrongAnswer
        from errorQuestion e left join question q on q.id = e.questionId
        where e.userId = #{userId}
    </select>
</mapper>